resconfig
xconfig

pulse-enable on
sudo bluetooth off &
sudo fan default &
taffybar-restart --daemon --quiet
parcellite -d &
sudo sbox-umount &
( sleep 2; pulse-vol mic mute ) &
/usr/lib/x86_64-linux-gnu/xfce4/notifyd/xfce4-notifyd &

MACHINE_TYPE=`cat ~/machine-type 2>/dev/null`

if [ $MACHINE_TYPE = "main" ]; then
  sudo wauto -p &
  term -t qtemail-daemon -r email-daemon.pl
elif [ $MACHINE_TYPE = "aux" ]; then
  sudo wauto -p &
elif [ $MACHINE_TYPE = "tv" ]; then
  screensaver
  killall bgset
  bgset --exclude="porn/" &

  sudo igstart &
  cec-cmd start &
  ( sudo mnt
    sudo hdparm-tool --active /media/seedbox
    sudo hdparm-tool --log /media/videos >> hdparm-videos.log 2>>hdparm-videos.log
  ) &
  sudo wired &
  execPing screen-cmd fetch-seedbox &
  execPing screen-cmd revtun-ensure &
fi

exec xmonad
