#!/usr/bin/perl
use strict;
use warnings;

my $suffix = "-siduction-amd64";

sub run(@);

sub main(@){
  die "Usage: $0 kernel-version\n" if @_ != 1;
  my $v = shift;
  run "sudo", "apt-get", "install",
    "linux-headers-$v$suffix",
    "linux-image-$v$suffix",
  ;
  my $srcDir = "$ENV{HOME}/Code/thinkpad_acpi";
  chdir $srcDir;
  $ENV{PWD} = $srcDir;
  run "./install.pl", "$v$suffix";
}

sub run(@){
  system @_;
  die "Error: @_\n" if $? != 0;
}

&main(@ARGV);
