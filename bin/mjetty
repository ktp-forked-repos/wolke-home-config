#!/usr/bin/perl
use strict;
use warnings;

my $port = 8081;

my @opts = (
  "-Psdm,mock",
  "-Djetty.port=$port",
  "-DskipTests",
  "-Dcheckstyle.skip=true"
);

sub run(@);

sub main(@){
  open FH, "-|", "mvn", @opts, "jetty:run-war";
  my $line;
  while($line = <FH>){
    print $line;
    if($line =~ /Started Jetty Server/){
      run "alarm", "-s", "success";
    }
  }
  close FH;
}

sub run(@){
  print "@_\n";
  system @_;
}

&main(@ARGV);
