#!/usr/bin/perl
use strict;
use warnings;

my $port = 8081;

my @opts = (
  "-Psdm",
  "-Djetty.port=$port",
  "-DskipTests",
  "-Dcheckstyle.skip=true",
);

sub run(@);

my $usage = "Usage: $0 [--debug]\n";

sub main(@){
  my $debug = shift if @_ > 0 and $_[0] =~ /^(--debug)$/;
  die $usage if @_ != 0;

  my $mvn = defined $debug ? "mvnDebug" : "mvn";
  open FH, "-|", $mvn, @opts, "jetty:run-war";
  my $line;
  while($line = <FH>){
    print $line;
    if($line =~ /Started Jetty Server/){
      run "alarm", "-s", "success";
    }
  }
  close FH;
}

sub run(@){
  print "@_\n";
  system @_;
}

&main(@ARGV);
