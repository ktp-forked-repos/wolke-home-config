#!/usr/bin/perl
use strict;
use warnings;

my $port = 8081;

my @opts = (
  "-Psdm",
  "-Pjetty",
  "-Djetty.port=$port",
  "-DskipTests",
  "-Dcheckstyle.skip=true",
);

sub run(@);

my $usage = "Usage: $0 [--debug]\n";

sub main(@){
  my $okVPN = `execPing --attempts=3 --url=ehr.dev`;
  if($okVPN !~ /ok/){
    run "alarm", "-s", "failure";
    die "could not ping ehr.dev (you need to be on the vpn\n";
  }

  my $debug = shift if @_ > 0 and $_[0] =~ /^(--debug)$/;
  die $usage if @_ != 0;

  my $mvn = defined $debug ? "mvnDebug" : "mvn";
  my @cmd = ($mvn, @opts, "jetty:run");
  print "@cmd\n";

  open FH, "-|", @cmd;
  my $line;
  while($line = <FH>){
    print $line;
    if($line =~ /Started Jetty Server/){
      run "alarm", "-s", "success";
    }
  }
  close FH;
}

sub run(@){
  print "@_\n";
  system @_;
}

&main(@ARGV);
