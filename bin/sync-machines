#!/usr/bin/perl
use strict;
use warnings;

sub run(@);

my @homeFiles = qw(
  .secrets
  wifi.conf
  wifi-auto.conf
  wvdial.conf

  .config/taffybar/icons/
  install/root-files/usr/share/sounds/custom/
  Backgrounds/
);

my @ipmagicNames = qw(nuc);

sub main(@){
  for my $ipmagicName(@ipmagicNames){
    my $host = `ipmagic $ipmagicName`;
    chomp $host;

    for my $file(@homeFiles){
      run "rsync", "-avP", "$ENV{HOME}/$file", "$host:~/$file";
    }
  }
}

sub run(@){
  print "@_\n";
  system @_;
}

&main(@ARGV);
