#!/usr/bin/python
import sys, os, hashlib, StringIO, bencode

def main():
  torrentPath = sys.argv[1]
  info = readTorrentInfo(torrentPath)
  torrentPieceHashes = extractTorrentPieceHashes(info)
  downloadPieceHashes = getDownloadPieceHashes(info)
  if len(torrentPieceHashes) > len(downloadPieceHashes):
    fail("MISSING PIECES")
  if len(torrentPieceHashes) < len(downloadPieceHashes):
    fail("TOO MANY PIECES")
  for i in range(len(torrentPieceHashes)):
    if torrentPieceHashes[i] != downloadPieceHashes[i]:
      fail("PIECE HASH MISMATCH")
  print "\nVERIFIED"

def extractTorrentPieceHashes(info):
  pieces = []
  strIO = StringIO.StringIO(info['pieces'])
  p = strIO.read(20)
  while p:
    pieces.append(p)
    p = strIO.read(20)
  return pieces

def readTorrentInfo(torrentPath):
  f = open(torrentPath, "rb")
  metaInfo = bencode.bdecode(f.read())
  f.close
  return metaInfo['info']

def getFilePaths(info):
  paths = []
  if 'files' in info:
    for fileInfo in info['files']:
      path = os.sep.join([info['name']] + fileInfo['path'])
      paths.append(path)
  else:
    path = info['name']
    paths.append(path)
  return paths

def readFilePieceHashes(paths, pieceLen):
  piece = ""
  pieceHashes = []
  for path in paths:
    print "\nhashing pieces for file:\n" + path
    try:
      sfile = open(path.decode('UTF-8'), "rb")
      while True:
        piece += sfile.read(pieceLen-len(piece))
        if len(piece) != pieceLen:
          sfile.close()
          break
        pieceHashes.append(hashPiece(piece))
        piece = ""
    except:
      fail("error reading file: " + path)
  if piece != "":
    pieceHashes.append(hashPiece(piece))
  return pieceHashes

def hashPiece(piece):
  return hashlib.sha1(piece).digest()

def getDownloadPieceHashes(info):
  pieceLen = info['piece length']
  paths = getFilePaths(info)
  pieces = readFilePieceHashes(paths, pieceLen)
  return pieces

def fail(msg):
  print "DOWNLOAD CORRUPTED: " + msg
  exit(1)

if __name__ == "__main__":
  main()
